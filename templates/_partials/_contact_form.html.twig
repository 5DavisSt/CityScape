<section class="contact-us-section padding-b-120">
    <div class="container container-two">
        <div class="contact-form bg-white">  
    <div class="section-heading">
        <span class="section-heading__subtitle bg-gray-100"> 
            <span class="text-gradient fw-semibold">Contact us</span> 
        </span>
        <h2 class="section-heading__title">Do you have any question? </h2>
        <p class="section-heading__desc">For your car we will do everything  advice, repairs and maintenance. We are the some preferred choice by many car owners because</p>
    </div>
	{{ form_start(form, ('attr': ('class': 'contact-form_form')) }}
        <div class="row gy-4">
            <div class="col-sm-6 col-xs-6">
				{{ form_widget(form.name)}}
            </div>
            <div class="col-sm-6 col-xs-6">
				{{ form_widget(form.email)}}
            </div>
            <div class="col-sm-6 col-xs-6">
				{{ form_widget(form.number)}}
            </div>
            <div class="col-sm-6 col-xs-6">
				{{ form_widget(form.subject)}}
            </div>
            <div class="col-12">
				{{ form_widget(form.message)}}
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-main w-100">Submit Now</button>
            </div>
        </div>
		{{ form_end(form) }}
</div>
    </div>  
</section>